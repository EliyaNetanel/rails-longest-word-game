<h1>LONGEST WORDS</h1>
<p>write the longest word you can with the letters provided</p>



<% @letters.each do |letter| %>
  <%= letter %>
<% end %>

<form class="form-inline" action="/games/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="tags_list" name="letters" type="hidden" value="<%= @letters.join(",") %>"/>
  <input type="text" name="word">
  <input class="btn btn-primary" type="submit" value="Play!">
</form>

<% @attempt = params[:word] %>
